{
  "name": "codetrack",
  "displayName": "CodeTrack",
  "description": "Track Coding Session and log them in Notion",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
},
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "CodeTrack",
      "properties": {
        "codetrack.notionSecret": {
          "type": "string",
          "default": "",
          "description": "Notion integration secret token. You can get it from your Notion integration settings.",
          "scope": "user"
        },
        "codetrack.trackingDatabaseURL": {
          "type": "string",
          "default": "",
          "description": "Notion integration tracking database url. Pages will be created in this database to log coding sessions.",
          "scope": "user"
        },
        "codetrack.autoStartOnVSCode": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start tracking when VS Code starts",
          "scope": "user"
        }
      }
    },
    "commands": [
      {
        "command": "codetrack.startSession",
        "title": "CodeTrack: Start Session"
      },
      {
        "command": "codetrack.endSession",
        "title": "CodeTrack: End Session"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codetrack-sidebar",
          "title": "CodeTrack",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "codetrack-sidebar": [
        {
          "id": "codetrack-view",
          "name": "CodeTrack",
          "type": "webview",
          "icon": "resources/icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.12",
    "node-fetch": "^3.3.2"
  }
}
